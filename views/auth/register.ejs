<div class="card mt-3">
    <div class="card-header">
        Registrasi
    </div>
    <div class="card-body">
        <%- include('../layouts/partials/alerts') %>
        <form action="/register?_csrf=<%= csrfToken %>" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Nama</label>
                <input type="text" name="name" value="<%- post.name  %>" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" value="<%- post.email  %>" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Ulangi Password</label>
                <input type="password" name="password_confirmation" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Nama</label>
                <input type="file" name="image" class="form-control">
                <small class="text-danger">Support JPG, PNG, JPEG. Maksimal 1 MB</small>
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>